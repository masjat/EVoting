<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:contentDescription="back icon"
        android:src="@drawable/arrow_back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="Ubah Tanggal"
        android:textColor="@color/black"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Tanggal pemilihan"
        android:drawableEnd="@drawable/baseline_calendar_today_24"
        android:inputType="date"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp" />

    <!-- Tombol Ubah -->
    <Button
        android:id="@+id/btnChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_red"
        android:padding="@dimen/_12sdp"
        android:text="Ubah"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        style="@android:style/Widget.Button"/>

</LinearLayout>
