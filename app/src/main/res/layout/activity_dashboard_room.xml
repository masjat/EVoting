<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp">

        <!-- Tombol Back -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back Button"
            android:src="@drawable/arrow_back"
            android:layout_alignParentStart="true" />

        <!-- Tombol Menu -->
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Menu Button"
            android:src="@drawable/baseline_menu_24"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/nmRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pemilihan Ketua Panitia Jalan Santai"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_8sdp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22 Desember 2024"
        android:textSize="@dimen/_12sdp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_8sdp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/voting_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_12sdp"
        android:contentDescription="Voting Image"
        android:src="@drawable/photo_evoting" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Kandidat"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textColor="@color/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_candidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>