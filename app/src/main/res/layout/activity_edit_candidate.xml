<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:contentDescription="back icon"
        android:src="@drawable/arrow_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="Edit kandidat"
        android:textColor="@color/black"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold" />

    <!--Add Identity-->
    <EditText
        android:id="@+id/etNmCandidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Nama Kandidat"
        android:inputType="textPersonName"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp" />

    <EditText
        android:id="@+id/etIdMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="No ID Anggota"
        android:inputType="number"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp" />

    <EditText
        android:id="@+id/etNoSerial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="No Urut"
        android:inputType="number"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp" />

    <EditText
        android:id="@+id/etVision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Visi"
        android:inputType="text"
        android:paddingBottom="@dimen/_48sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp" />

    <EditText
        android:id="@+id/etMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Misi"
        android:inputType="text"
        android:paddingBottom="@dimen/_100sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp" />

    <Button
        android:id="@+id/btFtCandidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Foto Kandidat"
        android:gravity="start"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_12sdp" />

    <!-- Button add -->
    <Button
        android:id="@+id/btnChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_red"
        android:padding="@dimen/_12sdp"
        android:text="Ganti"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        style="@android:style/Widget.Button"/>

</LinearLayout>
