<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_80sdp"
        android:orientation="horizontal"
        android:background="@drawable/background_rounded_menu">

        <ImageView
            android:id="@+id/im_profile"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_margin="@dimen/_16sdp"
            android:layout_gravity="center"
            android:src="@drawable/profile1"
            android:background="@drawable/circle_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Icon" />

        <TextView
            android:id="@+id/tx_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Under Teker"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Close Button Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:padding="@dimen/_16sdp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnclose"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/baseline_close_24" />
    </LinearLayout>

    <!-- Menu Items -->
    <TextView
        android:id="@+id/tx_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_below="@+id/header"
        android:text="Beranda"
        android:paddingVertical="@dimen/_12sdp"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tx_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_below="@+id/tx_dashboard"
        android:text="Profil"
        android:paddingVertical="@dimen/_12sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tx_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_below="@+id/tx_profil"
        android:text="Pengaturan"
        android:paddingVertical="@dimen/_12sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black" />

    <!-- Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:id="@+id/ll_logout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/baseline_logout_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="Keluar"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versi 1.0.0"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_32sdp"
            android:textColor="@color/black" />
    </LinearLayout>
</RelativeLayout>
