<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:contentDescription="back icon"
        android:src="@drawable/baseline_close_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Isi Nama Ruang dan Tanggal Pemiihan"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNameRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Nama ruang"
        android:textSize="@dimen/_12ssp"
        android:inputType="text"
        android:padding="@dimen/_12sdp" />

    <EditText
        android:id="@+id/etCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal Pemilihan"
        android:textSize="@dimen/_12ssp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:inputType="date"
        android:background="@drawable/background_rounded_lightred"
        android:padding="@dimen/_12sdp"
        android:drawableEnd="@drawable/baseline_calendar_today_24" />

    <!-- Tombol Lanjut -->
    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_red"
        android:padding="@dimen/_12sdp"
        android:text="Buat"
        android:textSize="@dimen/_16ssp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        style="@android:style/Widget.Button" />

</LinearLayout>