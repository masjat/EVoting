<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:contentDescription="back icon"
        android:background="@drawable/baseline_close_24" />
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_32sdp"
        android:layout_gravity="center"
        android:text="Masukkan kode ruang"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCodeRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Kode Ruang"
        android:textSize="@dimen/_12sdp"
        android:inputType="text"
        android:padding="@dimen/_12sdp" />

    <EditText
        android:id="@+id/etCodeCommittee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_32sdp"
        android:background="@drawable/background_rounded_lightred"
        android:hint="Kode Panitia (Opsional)"
        android:textSize="@dimen/_12sdp"
        android:inputType="text"
        android:padding="@dimen/_12sdp" />

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_red"
        android:padding="@dimen/_12sdp"
        android:text="Masuk"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        style="@android:style/Widget.Button" />

</LinearLayout>